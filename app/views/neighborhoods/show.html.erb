<div class="neighborhood_title"><%= @neighborhood.name %></div>
<div class="neighborhood_detail"><p><%= @neighborhood.description %></p></div>

<h3>Reviews</h3>
<ul>
<% @neighborhood.reviews.each do |review| %>
  <li>
    <strong>Rating: <%= review.rating %></strong><br>
    <%= review.description %>
  </li>
<% end %>
</ul>

<%= link_to "Add Review", "/neighborhoods/#{params[:id]}/reviews/new" %>
