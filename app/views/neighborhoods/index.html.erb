<div class="jumbotron">
  <h1 class="homepage_header">BOSTON</h1>
  <h2 class="sub_homepage_header">Neighborhood Review</h2>
  <p class="lead">Find, rate, review spots in Boston </p>

    <%= form_tag(neighborhoods_path, { method: "get", class: "navbar-form navbar-right"}) do %>
      <%= text_field_tag :q, params[:q], placeholder: "Find Neighborhoods", class: "form-control"  %>
      <%= submit_tag("Search", class: "form-control") %>
    <% end %>

    <% if !user_signed_in? %>
      <a class="btn btn-lg btn-success" href= "/users/sign_up" role="button">Sign up!</a>
    <% end %>
</div>

  <div class="row neighborhood_home">
    <% if @neighborhoods.any? %>
      <% @neighborhoods.each do |neighborhood| %>
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
          <div class="homepage_hood"><h4><%= neighborhood.name %></h4><div class="rating"><%= neighborhood.average_rating %></div>
        <%=link_to "Read the reviews!", neighborhood %></div>
        </div>
      <% end %>
    <% else %>
      <h4>Oops, we couldn't find anything for "<%= params[:q] %>." Please search again.</h4>
    <% end %>
  </div>
  <%= paginate @neighborhoods %>

